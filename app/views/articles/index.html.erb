
<h1>Listing articles</h1>

<%= link_to t('new_article'), new_article_path %>

<table>
  <tr>
    <th><%= t('title') %></th>
    <th><%= t('text') %></th>
  </tr>

  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to t('show'), article_path(article) %></td>
        <td><%= link_to t('edit'), edit_article_path(article) %></td>
        <td><%= link_to t('delete'), article_path(article), method: :delete, data: {confirm: "sure?" } %></td>
      </tr>
  <% end %>

</table>